$A = New-ScheduledTaskAction â€“Execute "C:\Program Files\Everything\Everything.exe" -Argument "-startup" 
$T = New-ScheduledTaskTrigger -AtLogon
$UserId = "$([Environment]::MachineName)\$([Environment]::UserName)"
